body
  margin 0
  padding 0
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
    "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


code
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

.app
  height 100vh

  &.white
    background-color #f2f0f0

    .countdownContent
      box-shadow 0px 0px 54px 0px rgba(0,0,0,0.75)

    .mainButton
      color black
      border black

    .lengthContainer
      border-top 2px solid black

  &.black
    background-color #333231

    .countdownContent
      box-shadow 0px 0px 54px 0px rgba(256,256,256,0.75)

    .mainButton
      color white
      border white

    .lengthContainer
      border-top 2px solid white

  .container
    position absolute
    left 50%
    transform translateX(-50%)

    &.countdown
      top 30%
      display flex
      flex-direction row

      span
        text-align center
        text-transform uppercase

    &.mainButton
      top 70%
      background none
      border 2px solid
      padding 20px 50px
      text-transform uppercase
      font inherit
      cursor pointer
      outline inherit

  .countdownContent
    padding 30px
    display flex
    flex-direction column
    width 20%
    border 2px solid
    width 20vw

    &.white
      border-color black
      background-color #f2f0f0

    &.black
      background-color #333231
      color white
      border-color white

  .lengthContainer
    display flex
    position absolute
    left 0
    bottom 0
    height 10vh
    width 100%

    .duration
      height 100%

      &:nth-child(odd)
        background-color #f2f0f0

      &:nth-child(even)
        background-color #333231
